{
  "compilerOptions": {
		"allowJs": false,
    "allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "./dist",
		"paths": {
			"@/*": ["./lib/*"],
			"@@/*": ["./test/resources/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDirs": ["./lib/", "./typings/"],
		"strict": true,
		"target": "esnext"
  },
	"include": [
		"./lib",
		"./typings",
		"./test"
	],
	"exclude": [
		"./dist",
		"./node_modules"
	]
}
