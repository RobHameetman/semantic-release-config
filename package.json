{
  "name": "@rob.hameetman/semantic-release-config",
  "version": "1.0.0-alpha.1",
  "description": "A package for centralized release management configuration.",
  "author": "Robert H. Hameetman (https://www.robhameetman.com/)",
  "homepage": "https://www.npmjs.org/package/@rob.hameetman/semantic-release-config",
  "license": "MIT",
  "private": true,
  "main": "dist/index.min.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobHameetman/semantic-release-config"
  },
  "bugs": {
    "url": "https://github.com/RobHameetman/semantic-release-config/issues"
  },
  "scripts": {
    "build": "rm -rf ./dist/ && NODE_ENV=production webpack --config=./config/webpack.config.js --mode=production --node-env=production",
    "format": "NODE_ENV=production eslint ./src --ext=ts,tsx --fix && stylelint src --fix --cache",
    "prepare": "husky install",
    "reset": "rm -rf node_modules/ && npm cache clear --force && npm ci --legacy-peer-deps",
    "setup": "sh scripts/setup.sh",
    "test": "NODE_ENV=test jest --maxWorkers=50%"
  },
  "dependencies": {
    "@datadog/browser-logs": "5.0.0",
    "@datadog/browser-rum": "5.0.0",
    "@nextui-org/react": "2.1.13",
    "@universe/address-parser": "3.2.0",
    "@welldone-software/why-did-you-render": "7.0.1",
    "core-js": "3.33.0",
    "history": "5.3.0",
    "lodash": "4.17.21",
    "path-browserify": "1.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-router-dom": "6.17.0",
    "regenerator-runtime": "0.14.0",
    "tailwindcss": "3.3.3"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.8.0",
    "@faker-js/faker": "8.2.0",
    "@rbnlffl/rollup-plugin-eslint": "5.0.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@testing-library/jest-dom": "6.1.4",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "commitlint": "17.8.0",
    "dotenv": "16.3.1",
    "dotenv-conversion": "3.0.0",
    "husky": "8.0.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "node-sass": "9.0.0",
    "postcss": "8.4.31",
    "rollup": "4.1.4",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.36.0",
    "stylelint": "15.11.0",
    "stylelint-config-recommended": "13.0.0",
    "stylelint-webpack-plugin": "4.1.1",
    "terser-webpack-plugin": "5.3.9",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "typescript": "5.2.2"
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "extends": "@rob.hameetman",
    "ignorePatterns": [
      "tailwind.config.js",
      "webpack.config.js",
      "src/forecast/types/SevenDayForecast",
      "typings/"
    ],
    "rules": {
      "sort-keys": "off",
      "sort-imports": "off",
      "import/no-unresolved": "off"
    },
    "overrides": [
      {
        "files": [
          "**/test/**",
          "**/__test__/**",
          "*.spec.ts?(x)"
        ],
        "rules": {
          "no-proto": "off",
          "@typescript-eslint/no-empty-function": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "ignoreFiles": [
      "dist/**/*.css",
      "coverage/**/*.css",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.spec.*",
      "**/*.snap.*",
      "**/*.jpg",
      "**/*.png",
      "**/*.md"
    ],
    "rules": {
      "indentation": "tab",
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ],
      "font-family-no-missing-generic-family-keyword": false
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "css",
      "scss"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/resources/$1",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "preset": "ts-jest",
    "reporters": [
      "default"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest/config/setupTests.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.spec.{ts,tsx}"
    ],
    "transform": {
      "\\.ts?(x)$": "ts-jest",
      "\\.(css|scss)$": "<rootDir>/test/jest/config/styleTransform.ts",
      "^(?!.*\\.(ts|tsx|css|json|cjs)$)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$",
      "node_modules/@adobe/css-tools"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
